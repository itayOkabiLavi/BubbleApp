<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper3"
    tools:context=".RegisterForm">

    <ImageView
        android:id="@+id/register_logo"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/register_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="10dp">

        <TextView
            android:id="@+id/register_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Your Name"
            android:textColor="?attr/txtTitle1"/>

        <EditText
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginTop="62dp"
            android:layout_marginBottom="21dp"
            android:background="?attr/backgroundBody"
            android:ems="10"
            android:hint="@string/fullName"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:shadowColor="#F10505"
            android:textColor="?attr/txtInput" />

        <TextView
            android:id="@+id/register_nickname_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Enter Nickname"
            android:textColor="?attr/txtTitle1"/>

        <EditText
            android:id="@+id/nickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="13dp"
            android:background="?attr/backgroundBody"
            android:ems="10"
            android:hint="@string/nickname"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:shadowColor="#F10505"
            android:textColor="?attr/txtInput" />

        <TextView
            android:id="@+id/register_pwd_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Password"
            android:textColor="?attr/txtTitle1"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginTop="3dp"
            android:autofillHints="password"
            android:background="?attr/backgroundBody"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="8dp"
            android:shadowColor="#F10505"
            android:textColor="?attr/txtInput" />

        <TextView
            android:id="@+id/register_repwd_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Verify Password"
            android:textColor="?attr/txtTitle1"/>

        <EditText
            android:id="@+id/validatePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginTop="36dp"
            android:autofillHints="validatePassword"
            android:background="?attr/backgroundBody"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="8dp"
            android:shadowColor="#F10505"
            android:textColor="?attr/txtInput" />

        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="?attr/backgroundButton"
            android:backgroundTint="?attr/backgroundButton"
            android:text="@string/register"
            android:textColor="?attr/mainText" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>