<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BubbleApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnContainer">@color/blue_standard</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/turquis</item>
        <item name="colorSecondaryVariant">@color/turquis</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/dark_purple</item>
        <item name="textAppearanceBody1">@color/white</item>
        <item name="textAppearanceHeadline1">@color/light_purple</item>
        <item name="buttonTint">@color/blue_standard</item>
        <item name="textAppearanceBody2">@color/black</item>
        <item name="textAppearanceHeadline2">@color/black</item>
    </style>
</resources>