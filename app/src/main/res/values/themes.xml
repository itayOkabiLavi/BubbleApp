<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BubbleApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_standard</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnContainer">@color/background_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/turquis</item>
        <item name="colorSecondaryVariant">@color/turquis</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/white</item>
        <item name="textAppearanceBody1">@color/black</item>
        <item name="textAppearanceHeadline1">@color/gray</item>
        <item name="buttonTint">@color/purple</item>
        <item name="textAppearanceBody2">@color/white</item>
        <item name="textAppearanceHeadline2">@color/white</item>
    </style>

    <style name="Theme.BubbleApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BubbleApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BubbleApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>